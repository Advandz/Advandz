RewriteEngine On

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ index.php

# Deny access to pdt files
<Files ~ "\.(pdt)$">
   order deny,allow
   deny from all
</Files>

