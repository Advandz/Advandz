{
    "name": "advandz/thunderbolt",
    "description": "The ultra fast and minimalist micro-framework by Advandz.",
    "keywords": ["framework", "php", "microframework", "api", "microservices"],
    "homepage": "http://advandz.com/",
    "type": "project",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=5.6"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "The Advandz Team",
            "email": "team@advandz.com"
        }
    ],
    "autoload": {
        "classmap": [
            "app",
            "components",
            "helpers",
            "lib"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "vendor-dir": "vendors/composer"
    },
    "scripts": {
        "post-install-cmd": [
            "rm -rf LICENSE.md",
            "rm -rf README.md",
            "rm -rf .gitignore",
            "rm -rf build",
            "rm -rf tests",
	        "rm -rf .styleci.yml",
	        "rm -rf .travis.yml",
	        "rm -rf .gitignore"
        ],
        "post-update-cmd": [
            "rm -rf LICENSE.md",
            "rm -rf README.md",
            "rm -rf .gitignore",
            "rm -rf build",
            "rm -rf tests",
            "rm -rf .styleci.yml",
	        "rm -rf .travis.yml",
	        "rm -rf .gitignore"
        ]
    }
}
